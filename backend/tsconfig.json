{ 
  "include": [ "./src" ],
  "exclude": [ "./node_modules", "./dist", "./other", "/test" ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",                                
    "resolveJsonModule": true,
    "module": "commonjs",                               
    "rootDir": "./src",                             
    "outDir": "./dist",                               
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                
  }
}
